<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DetailServiceActivity">


    <ImageView
        android:id="@+id/imageViewChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_margin="30dp"
        android:src="@drawable/ic_chat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_check"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre :"
            />

        <TextView
            android:id="@+id/textViewCategoryService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria del servicio :"
            />

        <TextView
            android:id="@+id/textViewNameService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del servicio :"
            />

        <Button
            android:id="@+id/buttonCancelService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar servicio"

            />

        <Button
            android:id="@+id/buttonSeeWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver trayecto"
            />


    </LinearLayout>

</LinearLayout>